doctype html
html

    block vars

    head
        meta(charset='utf8')
        meta(http-equiv='X-UA-Compatible', content='IE=edge, chrome=1')
        meta(name='description', content='Playing, building, learning. For everyone.')
        meta(name='author', content= "Rebel Labs")
        meta(name="viewport", content="width=device-width, initial-scale=1")

        link(rel="icon", type="image/x-icon", href="../img/favicon.ico")
        title #{pageTitle} - Rebel Makers
        link(rel="stylesheet", href="/fonts/akula.css")
        link(rel="stylesheet", href="https://maxcdn.bootstrapcdn.com/font-awesome/4.5.0/css/font-awesome.min.css")
        link(href='https://fonts.googleapis.com/css?family=Bangers', rel='stylesheet', type='text/css')
        != css()
        script(src="https://use.typekit.net/qhl2wtk.js")
        script.
            try{Typekit.load({ async: true });}catch(e){}

    body(class='#{pageClass}')
        
        include _header.jade

        .page

            block content

        include _footer.jade

        != js()
